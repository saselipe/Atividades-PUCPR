    <div class="container">
        <h1>Análise de Crédito</h1>
        
        <form id="credit-form" onsubmit="event.preventDefault(); processCreditSimple();">
            
            <!-- Campo CPF -->
            <div>
                <label for="cpf">CPF (Somente números)</label>
                <input type="text" id="cpf" maxlength="11" placeholder="12345678900" required>
            </div>

            <!-- Campo Renda Mensal -->
            <div>
                <label for="income">Renda Mensal (R$)</label>
                <input type="number" id="income" step="0.01" min="0" placeholder="3500.00" required>
            </div>

            <!-- Campo Valor Solicitado -->
            <div>
                <label for="amount">Valor Solicitado (R$)</label>
                <input type="number" id="amount" step="0.01" min="100" placeholder="850.00" required>
            </div>

            <!-- Botão de Ação -->
            <button type="submit">
                Verificar Crédito
            </button>
        </form>

        <!-- Área de Resultado Simplificada -->
        <div id="result-message"></div>

    </div>

    <script>
        function processCreditSimple() {
            const income = parseFloat(document.getElementById('income').value);
            const amount = parseFloat(document.getElementById('amount').value);
            const resultMessage = document.getElementById('result-message');

            // Lógica de simulação muito simples
            let isApproved = income >= (amount * 3); // Aprovado se a renda for 3x o valor solicitado

            resultMessage.style.display = 'block';

            if (isApproved) {
                resultMessage.textContent = '✅ CRÉDITO APROVADO! Próximo passo: Geração do Contrato.';
                resultMessage.className = 'approved';
            } else {
                resultMessage.textContent = '❌ CRÉDITO NÃO APROVADO. Seu registro foi para o Histórico.';
                resultMessage.className = 'denied';
            }
        }
    </script>
